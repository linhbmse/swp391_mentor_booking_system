@model ImportUserPreviewVM<CSVMentorDTO>

<div class="card bg-purple text-white mb-4">
    <div class="card-body">
        <h1 class="text-center mb-0">Mentor List Preview</h1>
    </div>
</div>

<span class="text-warning">Warning: Make sure the imported data is valid.</span>
@if (Model.ImportErrors != null && Model.ImportErrors.Any())
{   // There has been import errors
    <div class="alert alert-danger">
        <h4>Import Errors:</h4>
        <ul>
            @foreach (var error in Model.ImportErrors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="bg-purple text-white">
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Skills</th>
                <th>Specialization</th>
                <th>Main Programming Languages</th>
                <th>Alternative Programming Languages</th>
                <th>Frameworks</th>
                <th>Data Format Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td class="align-middle">@item.Record.Email</td>
                    <td class="align-middle">@item.Record.FullName</td>
                    <td class="align-middle">@item.Record.Phone</td>
                    <td class="align-middle">@item.Record.Gender</td>
                    <td class="align-middle">@item.Record.Skills</td>
                    <td class="align-middle">@item.Record.Specialization</td>
                    <td class="align-middle">
                        @if (item.Record.MainProgrammingLanguageList.Any())
                        {
                            <ul>
                                @foreach (var lang in item.Record.MainProgrammingLanguageList)
                                {
                                    <li>@lang</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Not specified</span>
                        }
                    </td>
                    <td class="align-middle">
                        @if (item.Record.AltProgrammingLanguageList.Any())
                        {
                            <ul>
                                @foreach (var lang in item.Record.AltProgrammingLanguageList)
                                {
                                    <li>@lang</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Not specified</span>
                        }
                    </td>
                    <td class="align-middle">
                        @if (item.Record.FrameworkList.Any())
                        {
                            <ul>
                                @foreach (var framework in item.Record.FrameworkList)
                                {
                                    <li>@framework</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Not specified</span>
                        }
                    </td>
                    <td class="align-middle">
                        @if (item.Errors.Any())
                        {
                            <ul>
                                @foreach (var error in item.Errors)
                                {
                                    <li class="text-danger">@error</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-success">Valid</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row pt-2">
    <div class="col-6 col-md-3">
        <form asp-controller="Admin" asp-action="ImportConfirm" method="post">
            <input type="hidden" name="DTOJson" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Results.Where(r => !r.Errors.Any()).Select(r => r.Record)))' />
            <input type="hidden" name="SelectedUserType" value="Mentor" />
            <button type="submit" class="btn btn-success w-100">Confirm Import</button>
        </form>
    </div>
    <div class="col-6 col-md-3">
        <a asp-controller="Admin" asp-action="Import" class="btn btn-secondary w-100">Cancel</a>
    </div>
</div>
