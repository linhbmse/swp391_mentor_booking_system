@model StudentGroupVM

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="post" asp-action="Create" onsubmit="return validateForm()">
                            <div class="mb-3">
                                <label asp-for="StudentGroup.GroupName" class="form-label">Group Name:</label>
                                <input asp-for="StudentGroup.GroupName" class="form-control" required />
                                <span asp-validation-for="StudentGroup.GroupName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="StudentGroup.TopicId" class="form-label">Select Topic:</label>
                                <select asp-for="StudentGroup.TopicId" asp-items="@Model.TopicList" class="form-select" required>
                                    <option disabled selected value="">-- Select a Topic --</option>
                                </select>
                                <span asp-validation-for="StudentGroup.TopicId" class="text-danger"></span>
                            </div>
                            @*
                            <div class="mb-3">
                            <label asp-for="WalletId" class="form-label">Wallet ID:</label>
                            <input asp-for="WalletId" class="form-control" required />
                            <span asp-validation-for="WalletId" class="text-danger"></span>
                            </div>
                            *@
                            <button type="submit" class="btn btn-primary">Create Group</button>
                            <a asp-action="MyGroup" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
