@model StudentDetailVM
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/profile.css" rel="stylesheet">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="mb-2">Update Student Information</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.ProfilePhoto" alt="ProfilePhoto" class="rounded-circle img-fluid mb-3" style="width: 150px;">
                        <h5 class="mb-2">@Model.FullName</h5>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="post" asp-action="UpdateProfile">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="UserId" value="@Model.UserId" class="form-control" hidden />
                            <div class="row mb-3">
                                <div class="col-sm-4 d-flex align-items-center">
                                    <strong>Student Code: </strong>
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="StudentCode" class="form-control" readonly />
                                    <span asp-validation-for="StudentCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 d-flex align-items-center">
                                    <strong>Full Name: </strong>
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="FullName" class="form-control" readonly />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 d-flex align-items-center">
                                    <strong>Gender: </strong>
                                </div>
                                <div class="col-sm-8">
                                    <select class="form-select" asp-for="Gender">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 d-flex align-items-center">
                                    <i class="me-2"></i>
                                    <strong>Email: </strong>
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="Email" class="form-control" readonly />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 d-flex align-items-center">
                                    <i class="me-2"></i>
                                    <strong>Phone: </strong>
                                </div>
                                <div class="col-sm-8">
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div style="text-align: center;">
                                <button type="submit" class="btn btn-primary w-30 ">Update Profile</button>
                                <a asp-action="MyProfile" asp-controller="Student" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
