@using System.Security.Claims;
@model ManageUserVM

@{
    Layout = "_Layout"; // Change layout to _Layout
    var mentorsList = Model.Mentors.ToList();
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/student/home.css" rel="stylesheet">
   
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column p-0">
        <div class="d-flex flex-grow-1">
            <div class="container-fluid">
                <div class="card">
                    <!--SearchBar-->
                    <div class="container mt-3 d-flex justify-content-center">
                        <div class="position-relative w-50">
                            <form asp-controller="Search" asp-action="SearchByName" method="get">
                                <div class="row mb-3">
                                    <div class="col-md-9">
                                        <input type="text"
                                               name="searchTemp"
                                               placeholder="Search mentors..."
                                               class="form-control " />
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-primary w-100">Search</button> 
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="content-wrapper">
                        <div class="container py-5">
                            <h1 class="text-center mb-5">Hot Mentors</h1>
                            <div id="mentorList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                @for (var i = 0; i < Model.Mentors.Count(); i++)
                                {
                                    var mentor = mentorsList[i];
                                    var cssClass = i >= 9 ? "d-none" : "";
                                    <div class="col @cssClass">
                                        <div class="card h-100 mentor-card">
                                            <img src="@mentor.ProfilePhoto" class="card-img-top" alt="@mentor.FullName">
                                            <div class="card-body">
                                                <h5 class="card-title">@mentor.FullName</h5>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p>Score: @mentor.MentorDetail.BookingScore</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <p>@mentor.MentorDetail.MainProgrammingLanguage</p>
                                                    </div>
                                                </div>                                               
                                            </div>
                                            <div class="card-footer">                                      
                                                <a asp-controller="Student" asp-action="ViewMentorProfile" asp-route-mentorId="@mentor.Id" class="btn btn-primary w-100">View Profile</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="text-center mt-4">
                                <button id="loadMoreBtn" class="btn btn-primary">Load More</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
