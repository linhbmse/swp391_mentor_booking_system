@model MentorBookingsVM

<h2>Bookings</h2>
<a asp-controller="Mentor" asp-action="Index" class="btn btn-secondary">Back to Home</a>
<form asp-action="ViewMentorBookings" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label for="status">Status:</label>
            <select name="status" id="status" class="form-control">
                <option value="">All</option>
                <option value="pending" selected="@(Model.Status == "pending")">Pending</option>
                <option value="confirmed" selected="@(Model.Status == "confirmed")">Confirmed</option>
                <option value="completed" selected="@(Model.Status == "completed")">Completed</option>
                <option value="cancelled" selected="@(Model.Status == "cancelled")">Cancelled</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="startDate">Start Date:</label>
            <input type="date" name="startDate" id="startDate" class="form-control custom-date-input" value="@Model.StartDate?.ToString("dd-MM-yyyy")">
        </div>
        <div class="col-md-3">
            <label for="endDate">End Date:</label>
            <input type="date" name="endDate" id="endDate" class="form-control custom-date-input" value="@Model.EndDate?.ToString("dd-MM-yyyy")">
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Group Name</th>
            <th>Schedule Date</th>
            <th>Schedule Time</th>
            <th>Booking Time</th>
            <th>Status</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Bookings.Count; i++)
        {
            var booking = Model.Bookings[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@booking.GroupName</td>
                <td>@booking.ScheduleDate.ToString("dd/MM/yyyy")</td>
                <td>@booking.SlotStartTime.ToString(@"HH\:mm") - @booking.SlotEndTime.ToString(@"HH\:mm")</td>
                <td>@booking.Timestamp.ToString(@"dd/MM/yyyy HH\:mm")</td>
                <td>@booking.Status</td>
                <td>@booking.Note</td>
                <td>
                    <a asp-action="ViewBookingDetail" asp-route-bookingId="@booking.BookingId" class="btn btn-primary btn-sm">View Details</a>
                    @if (booking.IsApprovable)
                    {
                        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#confirmModal" data-booking-id="@booking.BookingId">
                            Confirm Booking
                        </button>
                    }
                    @if (booking.IsCompletable)
                    {
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#completeModal" data-booking-id="@booking.BookingId">
                            Meeting Complete
                        </button>
                    }
                    @if (booking.IsPastBooking)
                    {
                        <button type="button" class="btn btn-secondary" disabled>Past</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("ViewMentorBookings", new { page = i, status = Model.Status, startDate = Model.StartDate, endDate = Model.EndDate })">@i</a>
            </li>
        }
    </ul>
</nav>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirm Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to confirm this booking?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="confirmForm" asp-controller="Booking" asp-action="ApproveBooking" method="post">
                    <input hidden id="bookingIdInput" name="bookingId" value="" />
                    <button type="submit" class="btn btn-success">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Complete Meeting Modal -->
<div class="modal fade" id="completeModal" tabindex="-1" aria-labelledby="completeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="completeModalLabel">Complete Meeting</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to mark this meeting as complete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="completeForm" asp-controller="Booking" asp-action="CompleteBooking" method="post">
                    <input hidden id="completeBookingIdInput" name="bookingId" value="" />
                    <button type="submit" class="btn btn-primary">Complete Meeting</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/approveBooking.js"></script>
}