@{
	@model MentorScheduleCustom.ViewModel.MentorScheduleWeekViewModel

<h2>Activities for Mentor ID: @Model.MentorDetailId</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Slot</th>
            <th>Monday @Model.WeekStartDate.ToString("dd/MM")</th>
            <th>Tuesday @Model.WeekStartDate.AddDays(1).ToString("dd/MM")</th>
            <th>Wednesday @Model.WeekStartDate.AddDays(2).ToString("dd/MM")</th>
            <th>Thursday @Model.WeekStartDate.AddDays(3).ToString("dd/MM")</th>
            <th>Friday @Model.WeekStartDate.AddDays(4).ToString("dd/MM")</th>
            <th>Saturday @Model.WeekStartDate.AddDays(5).ToString("dd/MM")</th>
            <th>Sunday @Model.WeekStartDate.AddDays(6).ToString("dd/MM")</th>
        </tr>
    </thead>
    <tbody>
        @for (var slot = 1; slot <= 4; slot++) 
        {
            <tr>
                <td>Slot @slot</td>

                @for (var day = 0; day < 7; day++)  
                {
                    var schedules = Model.DailySchedules.FirstOrDefault(ds => ds.Date == Model.WeekStartDate.AddDays(day))?.MentorSchedules;
                    var currentSchedule = schedules?.FirstOrDefault(ms => ms.SlotId == slot); // Declare and find the current slot for the day

                    <td>
                        @if (currentSchedule != null)
                        {
                            <div>
                                <strong>@currentSchedule.Slot.StartTime.ToString(@"hh\:mm") - @currentSchedule.Slot.EndTime.ToString(@"hh\:mm")</strong> <br />
                                
                                @if (currentSchedule.Status == "available")
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else if (currentSchedule.Status == "booked")
                                {
                                    <span class="badge bg-danger">Booked</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Unavailable</span>
                                }

                                <!-- Toggle button (shown if not booked) -->
                                @if (currentSchedule.Status != "booked")
                                {
                                    <form method="post" action="@Url.Action("ToggleSlotAvailability", "Mentor")">
                                        <input type="hidden" name="mentorScheduleId" value="@currentSchedule.Id" />
                                        <button type="submit" class="btn btn-sm @(currentSchedule.Status == "available" ? "btn-warning" : "btn-success")">
                                            @(currentSchedule.Status == "available" ? "Mark as Unavailable" : "Mark as Available")
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">-</span> <!-- No schedule for this slot -->
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- Navigation for Previous/Next Week -->
<a href="@Url.Action("ScheduleByWeek", new { mentorId = 1, startDate = Model.WeekStartDate.AddDays(-7) })" class="btn btn-primary">Previous Week</a>
<a href="@Url.Action("ScheduleByWeek", new { mentorId = 1, startDate = Model.WeekStartDate.AddDays(7) })" class="btn btn-primary">Next Week</a>

}