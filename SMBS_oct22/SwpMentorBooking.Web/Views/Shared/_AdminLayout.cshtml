@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 bg-light">
            <div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-controller="Admin" asp-action="Index">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ManageUser" ? "active" : "")" asp-controller="Admin" asp-action="ManageUser">
                            User Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "SkillSpecialization" ? "active" : "")" asp-controller="SkillSpecialization" asp-action="Index">
                            Skills & Specializations
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "SkillSpecialization" ? "active" : "")" asp-controller="Topic" asp-action="Index">
                            Topics
                        </a>
                    </li>
                    <!-- Add more nav items as needed -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ManageRequests" ? "active" : "")" asp-controller="Admin" asp-action="ManageRequests">
                            Manage Requests
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        <main class="col-md-9 col-lg-10">
            @RenderBody()
        </main>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}