@model MentorScheduleWeekVM

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Schedule for @Model.MentorFullName</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="~/css/site.css"> <!-- Custom styles -->
	<!-- Add your custom styles here -->
	<!--   <style>
		   body {
			   padding-top: 10px;
		   }
		  </style>-->
</head>
<body>

	<!-- Main content with sidebar -->
	<div class="container-fluid">
		<div class="row">
			<!-- Sidebar -->
			<nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
				<div class="position-sticky pt-3">
					<ul class="nav flex-column">
						<li class="nav-item">
							<a class="nav-link active" asp-controller="Mentor" asp-action="ViewSchedule">Schedule</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Mentor" asp-action="SetSchedule">Set Schedule</a>
						</li>
					</ul>
				</div>
			</nav>

			<!-- Main content -->
			<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
				<h3 class="text-center mb-3">Week: @Model.WeekStartDate.ToString("dd/MM/yyyy")</h3>

				<!-- Edit Schedule button (from the first template) -->
				<!--   <a asp-controller="Mentor" asp-action="SetSchedule" class="btn btn-primary mb-3">
					   <i class="bi bi-pencil-square"></i> Edit Schedule
					  </a>-->

				<div class="table-responsive">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Slot</th>
								@for (var day = 0; day < 7; day++)



								{
									<th>@Model.WeekStartDate.AddDays(day).ToString("ddd - dd/MM")</th>
								}
							</tr>
						</thead>
						<tbody>
							@foreach (var slot in Model.Slots)



							{
								<tr>
									<td>Slot @slot.Id (@slot.StartTime.ToString(@"HH\:mm") - @slot.EndTime.ToString(@"HH\:mm"))</td>
									@for (var day = 0; day < 7; day++)



									{



										var currentDate = Model.WeekStartDate.AddDays(day);



										var schedules = Model.DailySchedules.FirstOrDefault(ds => ds.Date == currentDate)?.MentorSchedules;



										var currentSchedule = schedules?.FirstOrDefault(ms => ms.SlotId == slot.Id);
										<td>
											@if (currentSchedule != null)



											{
												<a asp-action="ViewSchedulePreview"
												   asp-route-scheduleId="@currentSchedule.Id"
												   style="text-decoration: none;"
												   data-bs-toggle="ajax-modal"
												   data-bs-target="#scheduleModal">
													<div class="status-slot">
														<strong>@currentSchedule.SlotStartTime - @currentSchedule.SlotEndTime</strong> <br />
														@if (currentSchedule.Status == "available")



														{
															<span class="badge bg-success">Available</span>
														}



														else if (currentSchedule.Status == "booked")



														{
															<span class="badge bg-danger">Booked</span>
														}



														else



														{
															<span class="badge bg-warning">Unavailable</span>
														}
													</div>
												</a>
											}



											else



											{
												<span class="text-muted">-</span>
											}
										</td>
									}
								</tr>
							}
						</tbody>
					</table>
				</div>

				<!-- Previous and Next Week buttons (from the first template) -->
				<div class="d-flex justify-content-between mt-3">
					<a href="@Url.Action("ViewSchedule", new { startDate = Model.WeekStartDate.AddDays(-7) })" class="btn btn-primary">Previous Week</a>
					<a href="@Url.Action("ViewSchedule", new { startDate = Model.WeekStartDate.AddDays(7) })" class="btn btn-primary">Next Week</a>
				</div>

				<!-- Modal (from the first template) -->
				<div class="modal fade" id="scheduleModal" tabindex="-1" role="dialog" aria-labelledby="scheduleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<!-- Modal content will be loaded here -->
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>

	<!-- Include Bootstrap and JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/viewMentorSchedule.js"></script>

</body>
</html>
@section Scripts {
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/viewMentorSchedule.js"></script>
}
